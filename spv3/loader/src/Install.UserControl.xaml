<UserControl x:Class="SPV3.Install_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SPV3"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:Install />
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#7F000000" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" Padding="25,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BF000000" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Width="960"
          Height="540">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/background_install.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="225" /> <!-- top      -->
            <RowDefinition Height="115" /> <!-- contents -->
            <RowDefinition Height="*" />   <!-- bottom   -->
        </Grid.RowDefinitions>

        <!-- Installation -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="640"
                    Visibility="{Binding Main}">
            <Label Content="Location:"
                   Foreground="White" />
            <DockPanel>
                <Button DockPanel.Dock="Right"
                        Margin="1,0,0,0"
                        Content="Browse"
                        Click="Browse" />
                <TextBox Name="Target"
                         Text="{Binding Target}"
                         TextChanged="Target_TextChanged"
                         VerticalContentAlignment="Center"
                         Margin="1,0,0,0"
                         BorderThickness="0" />
            </DockPanel>

            <DockPanel Margin="0,1,0,0">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
          </Grid.ColumnDefinitions>
          <Button Click="Back"
                  Grid.Column="0">
            Go back...
          </Button>
          <Button x:Name="InstallButton"
                  Grid.Column="1"
                  Margin="1,0,0,0"
                  Click="Install"
                  Content="Install"
                  IsEnabled="{Binding CanInstall}"/>
          <Button x:Name="CompressButton"
                  Margin="1,0,0,0"
                  Grid.Column="2"
                  Padding="0"
                  Click="CompressButton_Click"
                  ToolTip="Enable NTFS compression for this folder to significantly save space.
                  WARNING: Unless installing to an SSD, NTFS compression will cause data to load slower. This means maps may freeze up longer when loading new areas.
                  NOTE: Only added files will compress. If there were already files present, they will not be compressed.">
            <Grid Margin="-25,0" Width="auto">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
              </Grid.ColumnDefinitions>
              <Image Source="Assets/compressFolder.png"
                     Grid.Column="0"
                     Margin="1,0,0,0"
                     Height="auto" 
                     Width="24"/>
              <CheckBox  IsChecked="{Binding Compress}"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          Margin="2,0,2,0"
                          Padding="0"/>
              <TextBlock Grid.Column="2"
                          Margin="1,0,1,0"
                          VerticalAlignment="Center">
                Compress Folder
              </TextBlock>
            </Grid>
          </Button>
        </Grid>
      </DockPanel>
    </StackPanel>
        
        <!-- MCC -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="640"
                    Visibility="{Binding Mcc}">
            <Label Content="Locate Steam or its shortcut:"
                   Foreground="White"/>
            <DockPanel>
                  <Button DockPanel.Dock="Right"
                          Margin="1,0,0,0"
                          Click="BrowseSteam"
                          Content="Browse" />
                  <TextBox Name="SteamExePath"
                           Text="{Binding SteamExePath}"
                           TextChanged="SteamExePath_TextChanged"
                           VerticalContentAlignment="Center"
                           Margin="1,0,0,0"
                           BorderThickness="0" />
            </DockPanel>
            <DockPanel Margin="0,1,0,0">
              <Grid Margin="0,1,0,0">
                  <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="100" />
                      <ColumnDefinition />
                      <ColumnDefinition Width="100" />
                  </Grid.ColumnDefinitions>
                  <Button Grid.Column="0"
                          Margin="0,0,0,0"
                          Click="ViewHce">
                      Back
                  </Button>
                  <Button Grid.Column="1"
                          Margin="1,0,1,0">
                          <TextBlock  Foreground="White"
                                      TextWrapping="WrapWithOverflow"
                                      TextAlignment="Center"
                                      Text="{Binding SteamStatus}"/>
                  </Button>
                  <Button Grid.Column="2"
                          Margin="0,0,0,0"
                          Click="Quit">
                    Exit
                  </Button>
              </Grid>
            </DockPanel>
        </StackPanel>

        <!-- HCE -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="960"
                    Background="#80DC143C"
                    Visibility="{Binding Hce}">
            <TextBlock Foreground="White"
                       TextWrapping="WrapWithOverflow"
                       Margin="0,10"
                       TextAlignment="Center">
                A legal copy of Halo: Custom Edition has not been found on your system.
                <LineBreak />
                Please install it, then click on "Verify HCE" to check if the installation succeeded.
            </TextBlock>
            <Grid Margin="0,1,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Margin="0,0,0.5,0"
                        Click="ViewMain">
                    Go back...
                </Button>
                <Button Grid.Column="1"
                        Margin="0.5,0"
                        Click="ViewMcc"
                        Content="MCC" />
                <Button Grid.Column="2"
                        Margin="0.5,0"
                        Click="InstallHce"
                        Content="Step 1: Install HCE" />
                <Button Grid.Column="3"
                        Margin="0.5,0,0.5,0"
                        Click="VerifyHce"
                        Content="Step 2: Verify HCE" />
                <Button Grid.Column="4"
                        Margin="0.5,0,0,0"
                        Click="Quit">
                    Exit
                </Button>
            </Grid>
        </StackPanel>
        <StackPanel>
        </StackPanel>


    <!-- Load -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="640"
                    Visibility="{Binding Load}">

            <Button Margin="1,0,0,0"
                    Click="InvokeSpv3"
                    Content="Load SPV3" />
        </StackPanel>

        <!-- Status -->
        <Label Grid.Row="2"
               Content="{Binding Status}"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0,0,0,50" />
    </Grid>
</UserControl>