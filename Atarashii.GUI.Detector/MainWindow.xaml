<Window x:Class="Atarashii.GUI.Detector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atarashii.GUI.Detector"
        mc:Ignorable="d"
        SizeToContent="Height"
        ResizeMode="CanMinimize"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen"
        Width="240"
        Icon="/icon.ico">
    <Window.DataContext>
        <local:Main />
    </Window.DataContext>
    <StackPanel Margin="5">
        <TextBox Height="25"
                 IsReadOnly="True"
                 VerticalContentAlignment="Center"
                 Text="{Binding DetectedPath}" />
        <Button Margin="0,5"
                Content="Detect HCE Executable Path"
                Padding="5,0"
                Height="25"
                Click="Detect" />
        <TextBox Height="75"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Visible"
                 Text="{Binding Logs}" />
    </StackPanel>
</Window>