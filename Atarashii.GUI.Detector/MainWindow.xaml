<Window x:Class="Atarashii.GUI.Detector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atarashii.GUI.Detector"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen"
        Width="240"
        Height="360"
        Icon="/icon.ico">
    <Window.DataContext>
        <local:Main />
    </Window.DataContext>
    <StackPanel Margin="5">
        <Image Source="/icon.ico"
               Stretch="None" />
        <Label Content="Detection Result:" />
        <TextBox Height="25"
                 IsReadOnly="True"
                 VerticalContentAlignment="Center"
                 Text="{Binding DetectedPath}" />
        <DockPanel Margin="0,5,0,0">
            <Button Content="Detect HCE Executable Path"
                    Padding="5,0"
                    Height="25"
                    Click="Detect" />
            <Button Margin="5,0,0,0"
                    Content="Copy"
                    Padding="5,0"
                    Height="25"
                    Click="Copy" />
        </DockPanel>
    </StackPanel>
</Window>